<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_graph"
    app:startDestination="@id/signUpFragment">

    <activity
        android:id="@+id/mainActivity"
        android:name="com.example.profilecreation.ui.MainActivity"
        android:label="activity_main"
        tools:layout="@layout/activity_main" />
    <fragment
        android:id="@+id/confirmationFragment"
        android:name="com.example.profilecreation.ui.confirmation.ConfirmationFragment"
        android:label="ConfirmationFragment" />
    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.example.profilecreation.ui.signUp.SignUpFragment"
        android:label="fragment_sign_up"
        tools:layout="@layout/fragment_sign_up">
        <action
            android:id="@+id/action_signUpFragment_to_confirmationFragment"
            app:destination="@id/confirmationFragment" />
    </fragment>
</navigation>